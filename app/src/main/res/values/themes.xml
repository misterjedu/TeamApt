<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeamAptExercise" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_500</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NormalText" parent="Theme.TeamAptExercise">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">14sp</item>
    </style>

    <style name="SubText" parent="NormalText">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="LatestActionsIcon" parent="Theme.TeamAptExercise">
        <item name="android:background">@drawable/latest_icon_background</item>
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="LatestActionsIconArrow" parent="LatestActionsIcon">
        <item name="android:padding">6dp</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/balance_progress</item>
    </style>

    <style name="DefaultButton" parent="Theme.TeamAptExercise">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin__medium</item>
        <item name="android:paddingBottom">@dimen/margin__medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/icon_color_one</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="textAllCaps">false</item>
    </style>


    <dimen name="margin__medium">16dp</dimen>
    <dimen name="corner_radius">10dp</dimen>
</resources>